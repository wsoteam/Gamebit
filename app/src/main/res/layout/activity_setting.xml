<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_color_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_splash">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_back_menu_from_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_btn_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppinsbold"
                android:text="Settings"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_back_menu_from_setting"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_back_menu_from_setting" />

            <TextView
                android:id="@+id/tv_line_settings_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_line_green_setting"
                android:fontFamily="@font/poppinsmed"
                android:gravity="center"
                android:text="Background"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />


            <CheckedTextView
                android:id="@+id/ctv_background_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                android:layout_weight="1"
                android:drawableBottom="@drawable/checkbox_setting"
                android:fontFamily="@font/poppinsmed"
                android:text="Green"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/ctv_background_red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_line_settings_background" />

            <CheckedTextView
                android:id="@+id/ctv_background_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                android:layout_weight="1"
                android:drawableBottom="@drawable/checkbox_setting"
                android:fontFamily="@font/poppinsmed"
                android:text="Red"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/ctv_background_blue"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ctv_background_green"
                app:layout_constraintTop_toBottomOf="@+id/tv_line_settings_background" />

            <CheckedTextView
                android:id="@+id/ctv_background_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:drawableBottom="@drawable/checkbox_setting"
                android:fontFamily="@font/poppinsmed"
                android:gravity="center"
                android:text="Blue"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ctv_background_red"
                app:layout_constraintTop_toBottomOf="@+id/tv_line_settings_background" />

            <TextView
                android:id="@+id/tv_line_settings_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_line_green_setting"
                android:fontFamily="@font/poppinsmed"
                android:gravity="center"
                android:text="Sound"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ctv_background_red" />


            <CheckedTextView
                android:id="@+id/ctv_sound_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:drawableBottom="@drawable/checkbox_setting"
                android:fontFamily="@font/poppinsmed"
                android:text="Sound 1"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/ctv_background_green"
                app:layout_constraintStart_toStartOf="@+id/ctv_background_green"
                app:layout_constraintTop_toBottomOf="@+id/tv_line_settings_sound" />

            <CheckedTextView
                android:id="@+id/ctv_sound_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:drawableBottom="@drawable/checkbox_setting"
                android:fontFamily="@font/poppinsmed"
                android:gravity="center_horizontal"
                android:text="Sound 2"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/ctv_background_red"
                app:layout_constraintStart_toStartOf="@+id/ctv_background_red"
                app:layout_constraintTop_toBottomOf="@+id/tv_line_settings_sound" />

            <CheckedTextView
                android:id="@+id/ctv_sound_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:drawableBottom="@drawable/checkbox_setting"
                android:fontFamily="@font/poppinsmed"
                android:text="Sound 3"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/ctv_background_blue"
                app:layout_constraintStart_toStartOf="@+id/ctv_background_blue"
                app:layout_constraintTop_toBottomOf="@+id/tv_line_settings_sound" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>